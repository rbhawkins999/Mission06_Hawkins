@model Mission06_Hawkins.Models.NewMovie

@* nice wonderful form for someone to fill out *@

<h1>Enter a movie into the Movie Collection!</h1>

<form method="post">
 
    <input type="hidden" asp-for="MovieID" />
    
    <label asp-for="CategoryID">Category</label>
    <select asp-for="CategoryID">
        <option value = "" selected disabled>Select a Category</option>
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value="@c.CategoryID">@c.Category</option>
        }
    </select>

    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <input asp-for="Rating" >
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited" >
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex</label>
    <select asp-for="CopiedToPlex" >
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes"  />
    <br />

    <button type="submit">Add Movie</button>
</form>
