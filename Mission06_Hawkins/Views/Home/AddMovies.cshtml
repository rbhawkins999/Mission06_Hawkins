@model Mission06_Hawkins.Models.NewMovie

@* nice wonderful form for someone to fill out *@

<h1>Enter a movie into the Movie Collection!</h1>

<form method="post">
    <label asp-for="CategoryID">Category</label>
    <select asp-for="CategoryID" multiple />
        <option value="Miscellaneous">1</option>
        <option value="Drama">2</option>
        <option value="Television">3</option>
        <option value="Horror/Suspense">4</option>
        <option value="Comedy">5</option>
        <option value="Family">6</option>
        <option value="Action/Adventure">7</option>
        <option value="VHS">8</option>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" required />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" required />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" multiple>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited" required>
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex</label>
    <select asp-for="CopiedToPlex" required>
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" type="text" id="notes" name="notes" />
    <br />

    <button type="submit">Add Movie</button>
</form>
