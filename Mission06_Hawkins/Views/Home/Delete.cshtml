@* delete screen to make sure the user wants to delete the movie that is in the database *@

@model NewMovie

<h2>Delete Confirmation</h2>
<h3>@Model.Title</h3>
<form method="post">

    <input type="hidden" asp-for="MovieID" />

    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="MovieList">Cancel</a>
</form>